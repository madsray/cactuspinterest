<!DOCTYPE html>
<html>
  <head>

    <% include ../partials/head.ejs %>
  </head>
  <body>
    <% include ../partials/home.ejs %>

    <h1>Show</h1>
    <img src="<%=oneCactus.url%>" alt="Cactus Picture"class="img-responsive center-block">

    <% for (let comment of manyComments) { %>
      <h1><%= comment.author %>:<%= comment.content %> </h1>
      <form action="/comments/<%=comment._id%>?_method=DELETE" method=POST>
        <button ><span class="glyphicon glyphicon-trash"></span></button>
      </form>
      <a href="/comments/<%=comment._id%>/edit">EDIT</a>
  <% } %>
    <h3>Add a comment</h3>
    <form action="/comments" method="POST">
      <input type="text" name="author" placeholder="Your Name Here"/>
      <input type="text" name="content"placeholder="Your Comment Here" />
      <input type="hidden" name="cactus" value="<%= oneCactus._id %>"/>
      <input type="submit" />
    </form>
  </body>
</html>
